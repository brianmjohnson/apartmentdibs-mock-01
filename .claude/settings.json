{
  "env": {
    "CLAUDE_SHARE_REPO": "brianmjohnson/claude-sessions",
    "NODE_OPTIONS": "--max-old-space-size=10000"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/scripts/install-cli-tools.sh"
          }
        ]
      }
    ]
  }
}
